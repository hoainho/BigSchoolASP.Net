@model IEnumerable<BigSchool.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Khóa Học</h2>

<p>
    <a href="/courses/create" class="btn btn-success">Thêm Khóa Học</a>
</p>
<table class="table" border="1" cellpadding="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lecturer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lecturer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            <a href="/courses/Edit/@item.Id" class="btn btn-warning">Sửa</a>
            <a href="/courses/Details/@item.Id" class="btn btn-info">Chi Tiết</a>
            <a href="/courses/Delete/@item.Id" class="btn btn-danger">Xóa</a>

        </td>
    </tr>
}

</table>
